%span.chip.person-tag{data: {tag_id: tag.id}}
  = tag.name_without_category
  - if can?(:destroy, tag)
    = link_to icon(:remove),
              group_person_tag_path(person_id: tag.taggable.id, id: tag.id),
              method: :delete,
              data: { tag_id: tag.id },
              remote: true,
              class: 'person-tag-remove'
